<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="NewsApp.Pages.NewsListPage"
    Title="{Binding PageTitle}">

    <StackLayout Padding="10">
        <CollectionView x:Name="ArticlesCollectionView" SelectionMode="Single" SelectionChanged="OnArticleSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Margin="5" Padding="5">
                        <Grid ColumnDefinitions="100, *" ColumnSpacing="10">
                            <Image Source="{Binding Image}" WidthRequest="100" HeightRequest="100"/>
                            <Label Text="{Binding Title}" VerticalOptions="Center"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
